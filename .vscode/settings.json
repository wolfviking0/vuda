{
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.lineNumbers": "on",
    "editor.trimAutoWhitespace": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [
        120
    ],
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": false,
    "files.insertFinalNewline": true,
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#ffc862"
    },
    "cmakeFormat.cwd": "${workspaceFolder}",
    "cmakeFormat.args": [
        "--config-file",
        ".cmake-format"
    ],
    "editor.codeActionsOnSave": {
        "source.organizeImports": true,
    },
    "files.exclude": {
        "**/.*": false,
        ".*": false,
        "build": false,
        "xcode": false,
        ".pytest*": false,
        "**/__pycache__": false
    },
    "clang-format.fallbackStyle": "WebKit",
    "clang-format.style": "WebKit",
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format",
    },
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format",
    },
    "[cuda-cpp]": {
        "editor.defaultFormatter": "xaver.clang-format",
    },
    "[javascript]": {
        "editor.defaultFormatter": "xaver.clang-format",
    },
    "files.associations": {
        "*.resources": "cpp",
        "cmath": "cpp",
        "tensor": "cpp",
        "cstdint": "cpp",
        "ios": "cpp",
        "vector": "cpp",
        "cctype": "cpp",
        "clocale": "cpp",
        "cstdarg": "cpp",
        "cstddef": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "cstring": "cpp",
        "ctime": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "array": "cpp",
        "atomic": "cpp",
        "bit": "cpp",
        "*.tcc": "cpp",
        "chrono": "cpp",
        "codecvt": "cpp",
        "complex": "cpp",
        "condition_variable": "cpp",
        "deque": "cpp",
        "map": "cpp",
        "unordered_map": "cpp",
        "exception": "cpp",
        "algorithm": "cpp",
        "functional": "cpp",
        "iterator": "cpp",
        "memory": "cpp",
        "memory_resource": "cpp",
        "numeric": "cpp",
        "optional": "cpp",
        "random": "cpp",
        "ratio": "cpp",
        "string": "cpp",
        "string_view": "cpp",
        "system_error": "cpp",
        "tuple": "cpp",
        "type_traits": "cpp",
        "utility": "cpp",
        "fstream": "cpp",
        "initializer_list": "cpp",
        "iomanip": "cpp",
        "iosfwd": "cpp",
        "iostream": "cpp",
        "istream": "cpp",
        "limits": "cpp",
        "mutex": "cpp",
        "new": "cpp",
        "ostream": "cpp",
        "sstream": "cpp",
        "stdexcept": "cpp",
        "streambuf": "cpp",
        "thread": "cpp",
        "cinttypes": "cpp",
        "typeinfo": "cpp",
        "variant": "cpp",
        "__bit_reference": "cpp",
        "__functional_base": "cpp",
        "bitset": "cpp",
        "__memory": "cpp",
        "filesystem": "cpp",
        "forward_list": "cpp",
        "list": "cpp",
        "valarray": "cpp",
        "queue": "cpp",
        "stack": "cpp",
        "set": "cpp",
        "unordered_set": "cpp",
        "shared_mutex": "cpp",
        "typeindex": "cpp",
        "__nullptr": "cpp",
        "__locale": "cpp"
    }
}
